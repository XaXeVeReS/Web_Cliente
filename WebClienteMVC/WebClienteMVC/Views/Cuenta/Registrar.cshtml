@model WebClienteMVC.Models.RegistrarModel
@{
    Layout = null;
    bool mostrarError = !string.IsNullOrEmpty(Model.Error);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Registrar Usuario</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            background-image: url('/Recursos/Inicio.jpg');
            background-size: cover;
            background-position: center;
            font-family: 'Poppins', sans-serif;
        }

        .login-box {
            width: 480px;
            background-color: #5e5e5ee6;
            border-radius: 18px;
            padding: 35px 40px;
            color: #fff;
            box-shadow: 0 0 25px rgba(0,0,0,0.7);
        }

        .form-control {
            background: #ffffff4d;
            padding: 16px;
            font-size: 18px;
            border-radius: 12px;
        }

            .form-control::placeholder {
                color: #eee;
            }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 12px #ff9500;
                background: #ffffff70;
            }

        .btn-login {
            background-color: #ff9500;
            color: #fff;
            font-weight: bold;
            font-size: 20px;
            padding: 12px;
            border-radius: 12px;
        }

        .btn-eye i {
            font-size: 22px;
            color: #333;
        }

        a {
            text-decoration: none;
            color: #ffd28a;
            font-size: 16px;
        }

            a:hover {
                color: #ff9500;
            }
    </style>
</head>

<body>

    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="login-box">

            <div class="text-center mb-3">
                <img src="~/Recursos/LogoColor.png" style="max-height: 150px;" />
            </div>

            <h4 class="text-center mb-4 fw-bold">Registro de Usuario</h4>

            <form method="post">

                <div class="mb-3">
                    <label>Nombre</label>
                    <input name="Nombre" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Usuario</label>
                    <input name="Usuario" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input name="Email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Telfono</label>
                    <input name="Telefono"
                           class="form-control"
                           required
                           maxlength="9"
                           minlength="9"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                </div>
                <div class="mb-3">
                    <label>Contraseña</label>
                    <div class="input-group">
                        <input type="password"
                               name="Password"
                               class="form-control"
                               required
                               minlength="9"
                               pattern="^(?=.*[A-Z])(?=.*\d).{9,}$"
                               title="La contraseña debe tener al menos 9 caracteres, una letra mayúscula y un número." />
                        <button type="button" class="btn btn-light btn-eye" onclick="togglePass(this)">
                            <i class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="mb-3">
                    <label>Confirmar Contraseña</label>
                    <div class="input-group">
                        <input type="password" name="ConfirmarPassword" class="form-control" required />
                        <button type="button" class="btn btn-light btn-eye" onclick="togglePass(this)">
                            <i class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>

                <button class="btn btn-login w-100">Registrar</button>

                <div class="mt-3 text-center">
                    <a href="/Login/Login" class="text-warning">Volver al Login</a>
                </div>

            </form>

        </div>
    </div>
    @if (mostrarError)
    {
        @Html.Partial("_ModalError", Model.Error)
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

    @if (mostrarError)
    {
        <script>
            const modal = new bootstrap.Modal(document.getElementById('modalError'));
            modal.show();
        </script>
    }
    <script>
        function togglePass(btn) {
            let input = btn.parentElement.querySelector("input");
            let icon = btn.querySelector("i");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }
    </script>

</body>
</html>
