@model WebClienteMVC.Models.RecuperarModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Recuperar Contraseña</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('/Recursos/Inicio.jpg');
            background-size: cover;
            background-position: center;
            font-family: 'Poppins', sans-serif;
        }

        /* CAJA PRINCIPAL MÁS GRANDE Y GRIS */
        .login-box {
            width: 480px; /* Más ancho */
            background-color: #5e5e5eE6; /* GRIS PLOMO ELEGANTE */
            border-radius: 18px;
            padding: 35px 40px;
            color: #fff;
            box-shadow: 0 0 25px rgba(0,0,0,0.7);
        }

        /* Inputs más grandes */
        .form-control {
            background: #ffffff4d;
            border: none;
            color: white;
            padding: 15px;
            font-size: 18px;
            border-radius: 10px;
        }

            .form-control::placeholder {
                color: #eee;
            }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 12px #ff9500;
                background: #ffffff70;
            }

        /* Botón grande */
        .btn-login {
            background-color: #ff9500;
            color: #fff;
            font-weight: bold;
            font-size: 20px;
            padding: 12px;
            border-radius: 10px;
        }

            .btn-login:hover {
                background-color: #e28400;
            }

        .btn-eye i {
            font-size: 24px;
            color: #333;
        }

        a {
            text-decoration: none;
            color: #ffd28a;
            font-size: 16px;
        }

            a:hover {
                color: #ff9500;
            }


        /* Botón del ojo */
        .btn-eye i {
            font-size: 22px;
            color: #333;
        }

    </style>
</head>

<body>

    <div class="d-flex justify-content-center align-items-center vh-100">

        <div class="login-box">

            <div class="text-center mb-3">
                <img src="~/Recursos/LogoColor.png" style="max-height:140px;">
            </div>

            <h4 class="text-center fw-bold mb-4">Recuperar Contraseña</h4>

            <form method="post">

                <div class="mb-3">
                    <label>Usuario</label>
                    <input name="Usuario" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input name="Email" type="email" class="form-control" required />
                </div>

                <button class="btn btn-login w-100">Enviar Token</button>

                <div class="mt-3 text-center">
                    <a href="/Login/Login" class="text-warning">Volver al Login</a>
                </div>

            </form>

        </div>

    </div>

</body>
</html>
