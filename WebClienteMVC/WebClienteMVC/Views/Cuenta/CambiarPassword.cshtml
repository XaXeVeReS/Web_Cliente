@model WebClienteMVC.Models.CambiarPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Cambiar Contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background-image: url('/Recursos/Inicio.jpg');
            background-size: cover;
            background-position: center;
            font-family: 'Poppins', sans-serif;
        }
        /* ... (Mismo CSS) ... */
        .login-box {
            width: 480px;
            background-color: #5e5e5eE6;
            border-radius: 18px;
            padding: 35px 40px;
            color: #fff;
            box-shadow: 0 0 25px rgba(0,0,0,0.7);
        }

        .form-control {
            background: #ffffff4d;
            border: none;
            color: white;
            padding: 15px;
            font-size: 18px;
            border-radius: 10px;
        }

            .form-control::placeholder {
                color: #eee;
            }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 12px #ff9500;
                background: #ffffff70;
            }

        .btn-login {
            background-color: #ff9500;
            color: #fff;
            font-weight: bold;
            font-size: 20px;
            padding: 12px;
            border-radius: 10px;
        }

            .btn-login:hover {
                background-color: #e28400;
            }

        .btn-eye {
            border: none;
            background: transparent;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
            cursor: pointer;
        }

            .btn-eye i {
                font-size: 20px;
                color: #333;
            }

        .input-group {
            position: relative;
        }
    </style>
</head>

<body>
    <div class="d-flex justify-content-center align-items-center vh-100 px-3">
        <div class="login-box">
            <div class="text-center mb-3">
                <img src="~/Recursos/LogoColor.png" style="max-height:150px;">
            </div>

            <h4 class="text-center fw-bold mb-4">Cambiar Contraseña</h4>

            <form method="post" id="frmCambio">
                <div class="mb-3">
                    <label class="fw-semibold">Email</label>
                    <input name="Email" type="email" class="form-control" placeholder="Ingrese su correo"
                           required value="@(TempData["Email"] ?? (Model != null ? Model.Email : ""))" readonly />
                </div>

                <div class="mb-3">
                    <label class="fw-semibold">Token de recuperación</label>
                    <input name="Token" class="form-control" placeholder="Código enviado a su correo" required />
                </div>

                <div class="mb-3">
                    <label class="fw-semibold">Nueva Contraseña</label>
                    <div class="input-group">
                        <input name="NuevaClave" id="txtPass1" type="password" class="form-control" placeholder="Ingrese nueva contraseña" required />
                        <button type="button" class="btn-eye" onclick="togglePass(this)">
                            <i class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="fw-semibold">Confirmar Contraseña</label>
                    <div class="input-group">
                        <input name="ConfirmarClave" id="txtPass2" type="password" class="form-control" placeholder="Repita su contraseña" required />
                        <button type="button" class="btn-eye" onclick="togglePass(this)">
                            <i class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn btn-login w-100 mt-2">Cambiar Contraseña</button>
            </form>
        </div>
    </div>

    <script>
        // Función para ver contraseña (original)
        function togglePass(btn) {
            let input = btn.parentElement.querySelector("input");
            let icon = btn.querySelector("i");
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }

        // VALIDACIÓN DE CLIENTE (Contraseñas iguales)
        document.getElementById('frmCambio').addEventListener('submit', function(e) {
            var pass1 = document.getElementById('txtPass1').value;
            var pass2 = document.getElementById('txtPass2').value;

            if (pass1 !== pass2) {
                e.preventDefault(); // Detiene el envío al servidor
                Swal.fire({
                    icon: 'warning',
                    title: 'Contraseñas no coinciden',
                    text: 'Por favor, asegúrese de que ambas contraseñas sean idénticas.',
                    confirmButtonColor: '#ff9500'
                });
            }
        });

        // VALIDACIÓN DE SERVIDOR (Errores del WCF)
        @if (Model != null && !string.IsNullOrEmpty(Model.Error))
        {
            <text>
            Swal.fire({
                icon: 'error',
                title: 'Error del Sistema',
                text: '@Html.Raw(Model.Error)',
                confirmButtonColor: '#d33'
            });
            </text>
        }
    </script>
</body>
</html>