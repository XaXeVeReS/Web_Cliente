@model WebClienteMVC.Models.CambiarPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Cambiar Contraseña</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Fuente -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

    <style>

        body {
            background-image: url('/Recursos/Inicio.jpg');
            background-size: cover;
            background-position: center;
            font-family: 'Poppins', sans-serif;
        }

        /* CAJA PRINCIPAL MÁS GRANDE Y GRIS */
        .login-box {
            width: 480px; /* Más ancho */
            background-color: #5e5e5eE6; /* GRIS PLOMO ELEGANTE */
            border-radius: 18px;
            padding: 35px 40px;
            color: #fff;
            box-shadow: 0 0 25px rgba(0,0,0,0.7);
        }

        /* Inputs más grandes */
        .form-control {
            background: #ffffff4d;
            border: none;
            color: white;
            padding: 15px;
            font-size: 18px;
            border-radius: 10px;
        }

            .form-control::placeholder {
                color: #eee;
            }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 12px #ff9500;
                background: #ffffff70;
            }

        /* Botón grande */
        .btn-login {
            background-color: #ff9500;
            color: #fff;
            font-weight: bold;
            font-size: 20px;
            padding: 12px;
            border-radius: 10px;
        }

            .btn-login:hover {
                background-color: #e28400;
            }

        .btn-eye i {
            font-size: 24px;
            color: #333;
        }

        a {
            text-decoration: none;
            color: #ffd28a;
            font-size: 16px;
        }

            a:hover {
                color: #ff9500;
            }


        /* Botón del ojo */
        .btn-eye i {
            font-size: 22px;
            color: #333;
        }

    }

    </style>
</head>

<body>

    <div class="d-flex justify-content-center align-items-center vh-100 px-3">

        <div class="login-box">

            <!-- Logo -->
            <div class="text-center mb-3">
                <img src="~/Recursos/LogoColor.png" style="max-height:150px;">
            </div>

            <h4 class="text-center fw-bold mb-4">Cambiar Contraseña</h4>

            <form method="post">

                <!-- Email -->
                <div class="mb-3">
                    <label class="fw-semibold">Email</label>
                    <input name="Email" type="email" class="form-control" placeholder="Ingrese su correo" required />
                </div>

                <!-- Token -->
                <div class="mb-3">
                    <label class="fw-semibold">Token de recuperación</label>
                    <input name="Token" class="form-control" placeholder="Código enviado a su correo" required />
                </div>

                <!-- Nueva contraseña -->
                <div class="mb-3">
                    <label class="fw-semibold">Nueva Contraseña</label>
                    <div class="input-group">
                        <input name="NuevaClave" type="password" class="form-control" placeholder="Ingrese nueva contraseña" required />
                        <button type="button" class="btn-eye" onclick="togglePass(this)">
                            <i class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>

                <!-- Confirmar contraseña -->
                <div class="mb-3">
                    <label class="fw-semibold">Confirmar Contraseña</label>
                    <div class="input-group">
                        <input name="ConfirmarClave" type="password" class="form-control" placeholder="Repita su contraseña" required />
                        <button type="button" class="btn-eye" onclick="togglePass(this)">
                            <i class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>

                <!-- Botón -->
                <button class="btn btn-login w-100 mt-2">Cambiar Contraseña</button>

            </form>

        </div>

    </div>

    <!-- Mostrar/Ocultar contraseña -->
    <script>
        function togglePass(btn) {
            let input = btn.parentElement.querySelector("input");
            let icon = btn.querySelector("i");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }
    </script>

</body>
</html>
